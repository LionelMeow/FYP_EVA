<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - EVA TP032072</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Event Volunteer Application | EVA", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Convert.ToString(Session["LoggedFlag"]) == "")
                    { 
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Login", "Login", "Home")</li>
                    <li>@Html.ActionLink("Contact","Contact","Home")</li>
                    }
                    else if (Convert.ToString(Session["UserType"]) == "Admin")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Volunteer", "Index", "Volunteers")</li>
                        <li>@Html.ActionLink("Organiser", "Index", "Organisers")</li>
                        <li>@Html.ActionLink("Event", "Index", "Events")</li>
                        <li>@Html.ActionLink("Participation", "Index", "Participations")</li>
                        <li>@Html.ActionLink("Feedback", "Index", "Feedbacks")</li>
                    }
                    else if (Convert.ToString(Session["UserType"]) == "Volunteer")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Personal Profile", "Profile", "Volunteers", new { @id = @Session["UserID"]},null)</li>
                        <li>@Html.ActionLink("Current Event Lists", "MainPage", "Volunteers")</li>
                        <li>@Html.ActionLink("Edit Profile", "Edit", "Volunteers", new { @id = @Session["UserID"] }, null)</li>
                    }
                    else if (Convert.ToString(Session["UserType"]) == "Organiser")
                    {
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Events", "Create", "Events")</li>
                        <li>@Html.ActionLink("Main Page", "MainPage", "Organisers", new { @id = @Session["UserID"] }, null)</li>
                        <li>@Html.ActionLink("Participation", "Index", "Participations")</li>
                        <li>@Html.ActionLink("Feedback", "Index", "Feedbacks")</li>
                    }
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (Convert.ToString(Session["LoggedFlag"]) == "1")
                    {
                        <li>@Html.ActionLink("Log Out", "Logout", "Home")</li>
                        <li><a>Current User - @Convert.ToString(Session["UserName"])</a> </li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - EVA - Volunteering Management System created by TP032072 Ng Kok Xuan | Asia Pacific University UC3F1610SE</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
